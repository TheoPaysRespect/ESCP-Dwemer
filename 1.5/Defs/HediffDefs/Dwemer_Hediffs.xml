<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <HediffDef>
        <defName>ESCP_DwemerSweat</defName>
        <label>Dwemer sweat</label>
        <description>Thanks to superior sweat glands, Dwemer are generally more resistant to heat stroke. This however does not protect them from death should they persist in this state for too long.</description>
        <defaultLabelColor>(0.8, 0.8, 1)</defaultLabelColor>
        <lethalSeverity>1</lethalSeverity>
        <canApplyDodChanceForCapacityChanges>true</canApplyDodChanceForCapacityChanges>
        <stages>
            <li>
                <label>initial</label>
                <becomeVisible>false</becomeVisible>
            </li>
            <li>
                <label>initial</label>
                <minSeverity>0.04</minSeverity>
                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <offset>-0.01</offset>
                    </li>
                </capMods>
            </li>
            <li>
                <label>minor</label>
                <minSeverity>0.2</minSeverity>
                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <offset>-0.05</offset>
                    </li>
                </capMods>
            </li>
            <li>
                <label>moderate</label>
                <minSeverity>0.35</minSeverity>
                <capMods>
                    <li>
                        <capacity>Moving</capacity>
                        <offset>-0.1</offset>
                    </li>
                    <li>
                        <capacity>Consciousness</capacity>
                        <offset>-0.10</offset>
                    </li>
                </capMods>
            </li>
            <li>
                <label>serious</label>
                <minSeverity>0.62</minSeverity>
                <painOffset>0.15</painOffset>
                <capMods>
                    <li>
                        <capacity>Moving</capacity>
                        <offset>-0.3</offset>
                    </li>
                    <li>
                        <capacity>Consciousness</capacity>
                        <offset>-0.20</offset>
                    </li>
                </capMods>
            </li>
            <li>
                <label>extreme</label>
                <minSeverity>0.85</minSeverity>
                <lifeThreatening>true</lifeThreatening>
                <painOffset>0.30</painOffset>
                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <setMax>0.1</setMax>
                    </li>
                </capMods>
            </li>
        </stages>
    </HediffDef>
</Defs>
